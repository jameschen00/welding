<!-- BEGIN FOOTER -->
<div class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 space-mobile">
                <!-- BEGIN ABOUT -->
                <h2>{{'footer.about.title'|trans}}</h2>
                <p class="margin-bottom-30">{% autoescape %}{{'footer.about.text'|trans|raw}}{% endautoescape %}</p>
                <div class="clearfix"></div>
                <!-- END ABOUT -->

                <!-- BEGIN BLOG PHOTOS STREAM -->
                {{ render(controller('ApplicationGalleryBundle:Component:index')) }}
                <!-- END BLOG PHOTOS STREAM -->
            </div>
            <div class="col-md-4 col-sm-4 space-mobile">
                <!-- BEGIN CONTACTS -->
                <h2>{{'footer.contact.title'|trans}}</h2>
                <address class="margin-bottom-40">
                    {% autoescape %}{{'company.block'|trans|raw}}{% endautoescape %}
                </address>
                <!-- END CONTACTS -->
            </div>
            <div class="col-md-4 col-sm-4">
                <!-- BEGIN CATALOG BLOCK -->
                <h2>{{'footer.catalog.title'|trans}}</h2>
                <ul class="footer-categories">
                {%  for category in tree.data %}
                    <li><a href="{{path('category_'~category.data.id)}}">{{category.data.name}}</a></li>
                {% endfor %}
                </ul>
                <!-- END CATALOG BLOCK -->
            </div>
        </div>
    </div>
</div>
<!-- END FOOTER -->

